{
	"name": "web",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:all": "npm run test:run && npm run test:e2e",
		"analyze:bundle": "vite build --mode analyze",
		"build:perf": "vite build --mode production --sourcemap",
		"lighthouse": "lighthouse http://localhost:4173 --output html --output-path ./lighthouse-report.html"
	},
	"dependencies": {
		"@tanstack/svelte-form": "^1.19.4",
		"@tanstack/svelte-query": "^5.87.1",
		"@types/crypto-js": "^4.2.2",
		"crypto-js": "^4.2.0",
		"helmet": "^8.1.0",
		"lucide-svelte": "^0.543.0",
		"nanoid": "^5.1.5",
		"zod": "^4.1.5",
		"zustand": "^5.0.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.4",
		"@playwright/test": "^1.55.0",
		"@sentry/vite-plugin": "^4.3.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@testing-library/user-event": "^14.6.1",
		"@vitest/ui": "^3.2.4",
		"jsdom": "^26.1.0",
		"playwright": "^1.55.0",
		"rollup-plugin-visualizer": "^6.0.3",
		"sharp": "^0.34.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"vite-plugin-pwa": "^1.0.3",
		"vitest": "^3.2.4",
		"workbox-window": "^7.3.0"
	}
}

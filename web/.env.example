# CrescendAI Web Application Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# CLIENT-SAFE ENVIRONMENT VARIABLES (PUBLIC_* prefix)
# These variables are included in the client bundle and can be seen by users
# =============================================================================

# API Configuration
PUBLIC_API_URL=http://localhost:8787
PUBLIC_APP_NAME=CrescendAI
PUBLIC_APP_VERSION=1.0.0

# Feature Flags
PUBLIC_ENABLE_ANALYTICS=false
PUBLIC_DEBUG_LOGGING=true

# Support
PUBLIC_SUPPORT_EMAIL=support@crescendai.app

# File Upload Limits
PUBLIC_MAX_FILE_SIZE=52428800  # 50MB in bytes
PUBLIC_RATE_LIMIT_WINDOW=60000  # 1 minute in milliseconds
PUBLIC_RATE_LIMIT_MAX=100       # Max requests per window

# =============================================================================
# SERVER-ONLY ENVIRONMENT VARIABLES (NO PUBLIC_ prefix)
# These variables are never exposed to the client browser
# =============================================================================

# Security - CRITICAL: Generate strong values for production
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
ENCRYPTION_KEY=your-32-character-encryption-key!

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/crescendai
REDIS_URL=redis://localhost:6379

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Admin Configuration
ADMIN_EMAIL=admin@crescendai.app

# =============================================================================
# PRODUCTION SECURITY CHECKLIST
# =============================================================================

# ✅ JWT_SECRET: Must be at least 32 characters, cryptographically random
# ✅ ENCRYPTION_KEY: Must be exactly 32 characters, cryptographically random
# ✅ DATABASE_URL: Use strong passwords and SSL connections
# ✅ SMTP_PASSWORD: Use app-specific passwords, not your main password
# ✅ PUBLIC_API_URL: Use HTTPS in production
# ✅ Never commit .env.local to version control

# =============================================================================
# GENERATING SECURE SECRETS
# =============================================================================

# For JWT_SECRET (generate 64 character random string):
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# For ENCRYPTION_KEY (generate exactly 32 character string):
# node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"

# Or use online generators:
# https://generate-secret.vercel.app/32 (for JWT_SECRET)
# https://generate-secret.vercel.app/16 (for ENCRYPTION_KEY)

# =============================================================================
# DEVELOPMENT VS PRODUCTION
# =============================================================================

# Development defaults are provided above
# For production, you MUST change all security-related values

# Production API URL should be:
# PUBLIC_API_URL=https://api.crescendai.app

# Production feature flags:
# PUBLIC_ENABLE_ANALYTICS=true
# PUBLIC_DEBUG_LOGGING=false